{% set title = "Stagify - Création de stage" %}
{% extends "components/layouts/layout.twig" %}
{% import "components/layouts/form_field.twig" as form_field %}
{% import "components/tiles/removable_tile.twig" as removable_tile %}

{% block header %}
    <section class="bg-deepWarmGrey rounded-bottom-5">
        <div class="container">
            <div class="row text-center">
                <div class="text-heavyBlack py-3"><h4>Création d'offre</h4></div>
            </div>
        </div>
    </section>
{% endblock %}

{% block content %}

    <section>
        <div class="container">
            <div class="card bg-deepWarmGrey py-3 px-3 my-5 shadow">
                <div class="row">
                    <div class="col-md-6 col-lg">
                        <h5>Nom de l'entreprise</h5>
                        {{ form_field.content("company") }}

                        <h5 class="mt-2">Titre du poste</h5>
                        {{ form_field.content("title") }}

                        <h5 class="mt-2">Rémunération (basse-haute)</h5>
                        <div class="input-group shadow rounded-5">
                            {{ form_field.content("lowSalary", false, 0, false, false, false) }}
                            {{ form_field.content("highSalary", false, 0, false, false, false) }}
                        </div>
                        <h5 class="mt-2">Compétences</h5>
                        <div class="input-group rounded-5 shadow ">
                            {{ form_field.content("skills", false, 0, false, false, false) }}
                            <div class="input-group-append">
                                <button class="btn btn-deepSeaBlue rounded-start-0" type="button">Ajouter</button>
                            </div>
                        </div>

                        <h5 class="mt-2">Promotions concernées (formation - promo)</h5>
                        <div class="input-group shadow rounded-5">
                            {{ form_field.content("promoType", false, 0, false, false, false) }}
                            {{ form_field.content("promo", false, 0, false, false, false) }}
                            <div class="input-group-append">
                                <button class="btn btn-deepSeaBlue rounded-start-0" type="button">Ajouter</button>
                            </div>
                        </div>

                        <div class="my-2 d-md-none"></div>
                        <h5>Description du poste</h5>
                            {{ form_field.content("description", true, 7) }}
                        <div class="my-4"></div>

                    </div>

                    <div class="col-md-6 col-lg">


                        <div class="card bg-pastelBlue bg-opacity-50 overflow-y-scroll shadow rounded-5 mb-3"
                             style="height: 300px">
                            <div class="card-body">
                                <h6>Compétences</h6>
                                <div class="row">
                                    <div class="col">
                                        {{ removable_tile.content("A2 Ingénieur - CESI Reims") }}
                                        {{ removable_tile.content("A2 Ingénieur - CESI Reims") }}
                                        {{ removable_tile.content("A2 Ingénieur - CESI Reims") }}
                                        {{ removable_tile.content("A2 Ingénieur - CESI Reims") }}
                                        {{ removable_tile.content("A2 Ingénieur - CESI Reims") }}
                                        {{ removable_tile.content("A2 Ingénieur - CESI Reims") }}
                                        {{ removable_tile.content("A2 Ingénieur - CESI Reims") }}
                                        {{ removable_tile.content("A2 Ingénieur - CESI Reims") }}
                                        {{ removable_tile.content("A2 Ingénieur - CESI Reims") }}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card bg-pastelBlue bg-opacity-50 overflow-y-scroll shadow rounded-5"
                             style="height: 300px">
                            <div class="card-body">
                                <h6>Compétences</h6>
                                <div class="row">
                                    <div class="col">
                                        {{ removable_tile.content("C++") }}
                                        {{ removable_tile.content("C++") }}
                                        {{ removable_tile.content("C++") }}
                                        {{ removable_tile.content("C++") }}
                                        {{ removable_tile.content("C++") }}
                                        {{ removable_tile.content("C++") }}
                                        {{ removable_tile.content("C++") }}
                                        {{ removable_tile.content("C++") }}
                                        {{ removable_tile.content("C++") }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col text-end">
                        <div class="btn btn-deepSeaBlue">Valider</div>
                    </div>
                </div>

            </div>
        </div>
    </section>
{% endblock %}