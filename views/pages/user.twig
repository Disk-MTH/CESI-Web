{% set title = "Stagify - Utilisateur" %}
{% extends "components/layouts/layout.twig" %}

{% block header %}
    <section class="bg-gradient-card">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-4">
                    <img class="img-fluid my-3 rounded-5" src="/files/users/{{ user.getProfilePicture() }}"
                         alt="profile_picture" style="width: 20vh; height: 20vh;">
                </div>
                <div class="col-8">
                </div>
            </div>
        </div>
    </section>

    <section class="bg-deepWarmGrey pb-5">
        <div class="container">
            <div class="row align-items-center text-nowrap">
                <div class="my-2"></div>
                <h2>{{ user.getFirstName() }} {{ user.getLastName() }}</h2>
                <h4>
                    A{{ user.getPromos()[0].getYear() }}
                    {{ user.getPromos()[0].getType() }}
                    -
                    {{ user.getPromos()[0].getSchool() }}
                </h4>
                <h6 class="text-lightGrey">{{ user.getLocation().getZipCode() }} {{ user.getLocation().getCity() }}</h6>
                <div class="my-2"></div>
                <a class="h6 text-deepSeaBlue text-decoration-none" href="{{ url_for("home") }}">
                    Details du profil
                </a>
            </div>
        </div>
    </section>
{% endblock %}

{% block content %}
    <section>
        <div class="container text-bg-deepWarmGrey rounded-2 pt-3 pb-4 px-3 my-5">
            <h2>Infos</h2>
            {{ user.getDescription() }}
        </div>
    </section>
{% endblock %}
