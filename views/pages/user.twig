{% set title = "Stagify - Utilisateur" %}
{% extends "components/layouts/layout.twig" %}
{% import "components/profiles/user_profile.twig" as user_profile %}

{% block header %}
    <section class="bg-gradient-card">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-4">
                    <img class="img-fluid my-3 w-75" src="{{ user.getProfilePicturePath() }}" alt="profile_picture">
                </div>
                <div class="col-8">
                </div>
            </div>
        </div>
    </section>

    <section class="bg-deepWarmGrey rounded-bottom-5 pb-5">
        {{ user_profile.content(user) }}
    </section>
{% endblock %}

{% block content %}
    <section>
        <div class="container text-bg-deepWarmGrey rounded-5 pt-3 pb-4 px-3 my-5">
            <h2>Infos</h2>
            {{ user.getDescription() }}
        </div>
    </section>
{% endblock %}