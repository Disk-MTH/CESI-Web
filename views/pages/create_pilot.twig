{% set title = "Stagify - Création de pilote" %}
{% extends "components/layouts/layout.twig" %}
{% import "components/layouts/form_field.twig" as form_field %}
{% import "components/tiles/removable_tile.twig" as removable_tile %}

{% block header %}
    <section class="bg-deepWarmGrey rounded-bottom-5">
        <div class="container">
            <div class="row text-center">
                <div class="text-heavyBlack py-3"><h4>Création d'utilisateur</h4></div>
            </div>
        </div>
    </section>
{% endblock %}

{% block content %}
    <section>
        <div class="container">
            <div class="card bg-deepWarmGrey py-3 px-3 my-5 shadow">
                <div class="row mb-2">
                    <div class="col-6 text-center border-end border-heavyBlack " >
                        <a class="text-decoration-none text-heavyBlack" href={{ url_for("create_student") }}>
                            <h4>Etudiant</h4>
                        </a>
                    </div>
                    <div class="col-6 text-center text-deepSeaBlue" >
                        <a class="disabled text-decoration-none" href={{ url_for("create_pilot") }} >
                            <h4>Pilote</h4>
                        </a>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-md-6 col-lg">
                        <h5>Nom</h5>
                        {{ form_field.content("firstName") }}

                        <h5 class="mt-2">Prenom</h5>
                        {{ form_field.content("lastName") }}

                        <h5 class="mt-2">Code postal</h5>
                        {{ form_field.content("zipCode") }}

                        <h5 class="mt-2">Ville</h5>
                        {{ form_field.content("city") }}

                        <h5 class="mt-2">Centre de formation</h5>
                        {{ form_field.content("zipCode") }} {#todo#}

                        <h5 class="mt-2">Promotions assignées (formation - promo)</h5>
                        <div class="input-group shadow rounded-5">
                            {{ form_field.content("promoType", false, 0, false, false, false) }}
                            {{ form_field.content("promo", false, 0, false, false, false) }}
                            <div class="input-group-append">
                                <button class="btn btn-deepSeaBlue rounded-start-0" type="button">Ajouter</button>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg">
                        <div class="my-4 d-md-none"></div>

                        <div class="card bg-pastelBlue bg-opacity-50 overflow-y-scroll shadow rounded-5" style="height: 460px">
                            <div class="card-body">
                                <h6>Promotions</h6>
                                <div class="row">
                                    <div class="col">
                                        {{ removable_tile.content("A2 Ingénieur - CESI Reims") }}
                                        {{ removable_tile.content("A2 Ingénieur - CESI Reims") }}
                                        {{ removable_tile.content("A2 Ingénieur - CESI Reims") }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col text-end">
                        <div class="btn btn-deepSeaBlue">Valider</div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}