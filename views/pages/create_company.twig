{% set title = "Stagify - Création d'entreprise" %}
{% extends "components/layouts/layout.twig" %}
{% import "components/layouts/form_field.twig" as form_field %}
{% import "components/tiles/removable_tile.twig" as removable_tile %}

{% block header %}
    <section class="bg-deepWarmGrey rounded-bottom-5">
        <div class="container">
            <div class="row text-center">
                <div class="text-heavyBlack py-3"><h4>Création d'entreprise</h4></div>
            </div>
        </div>
    </section>
{% endblock %}

{% block content %}
    <section>
        <div class="container">
            <form class="card bg-deepWarmGrey py-3 px-3 my-5 shadow" action="{{ url_for("create_company") }}" method="post">
                <div class="row">
                    <div class="col-md-6 col-lg" >
                        <h5>Nom</h5>
                        {{ form_field.content(errors, old, "name") }}

                        <h5 class="mt-2">Logo</h5>
                        {{ form_field.content(errors, old, "logo", false, 0, false, true) }}

                        <h5 class="mt-2">Secteur d'activité</h5>
                        {{ form_field.content(errors, old, "sector") }}

                        <h5 class="mt-2">Localité (code postal - ville) </h5>
                        <div class="input-group shadow rounded-5">
                            {{ form_field.content(errors, old, "zipCode", false, 0, false, false, false) }}
                            {{ form_field.content(errors, old, "city", false, 0, false, false, false) }}
                            <div class="input-group-append">
                                <button class="btn btn-deepSeaBlue rounded-start-0" type="button">Ajouter</button>
                            </div>
                        </div>

                        <h5 class="mt-2">Nombre d'employés</h5>
                        {{ form_field.content(errors, old, "employees") }}

                        <h5 class="mt-2">Site web</h5>
                        {{ form_field.content(errors, old, "website") }}
                    </div>

                    <div class="col-md-6 col-lg">
                        <div class="my-4 d-md-none"></div>

                        <div class="card bg-pastelBlue bg-opacity-50 overflow-y-scroll shadow rounded-5"
                             style="height: 460px">
                            <div class="card-body">
                                <h6>Adresses</h6>
                                <div class="row">
                                    <div class="col">
                                        {{ removable_tile.content("51100 Reims") }}
                                        {{ removable_tile.content("51100 Reims") }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col text-end">
                        <button class="btn btn-deepSeaBlue">Valider</button>
                    </div>
                </div>
            </form>
        </div>
    </section>
{% endblock %}