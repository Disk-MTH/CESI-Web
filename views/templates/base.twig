        <div class="col-3 border flex-wrap">
            <img class="img-fluid col-2" src="/assets/img/logo.png" alt="logo"/>
        </div>
        <div class="col">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text rounded-end-0">
                        <img class="img-fluid" src=/assets/svg/search.svg alt="search">
                    </span>
                </div>
                <input type="text" class="form-control" placeholder="temp" aria-label="temp" Placeholder text
