{% if flash != null %}
    {% if flash.status.name == "success" %}
        {% set display = true %}
        {% set class = "bg-pastelGreen" %}
        {% set pictogram = "check_circle_fill" %}
        {% set type="Succ√®s : " %}
    {% elseif flash.status.name == "info" %}
        {% set display = true %}
        {% set class = "bg-pastelBlue" %}
        {% set pictogram = "info_circle_fill" %}
        {% set type="Information : " %}
    {% elseif flash.status.name == "warning" %}
        {% set display = true %}
        {% set class = "bg-goldenBrown bg-opacity-25" %}
        {% set pictogram = "exclamation_triangle_fill" %}
        {% set type="Avertissement : " %}
    {% elseif flash.status.name == "error" %}
        {% set display = true %}
        {% set class = "bg-pastelRed" %}
        {% set pictogram = "exclamation_circle_fill" %}
        {% set type="Erreur : " %}
    {% else %}
        <div class="alert alert-danger h4 text-center">
            The flash status "{{ flash.status.name }}" is not supported yet
        </div>
    {% endif %}
{% endif %}

