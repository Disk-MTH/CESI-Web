{% macro content(id, group, label, old = [], checked = false) %}
    <div class="form-check user-select-none">
        <input class="form-check-input" type="radio" id="{{ id }}" name="{{ group }}"
               {% if checked or old[id] %}checked{% endif %}>
        <label class="form-check-label" for="{{ id }}">{{ label }}</label>
    </div>
{% endmacro %}