{% macro content(id, label, old = [], checked = false) %}
    <div class="form-check">
        <input class="form-check-input" type="checkbox" id="{{ id }}" name="{{ id }}"
               {% if checked or old[id] %}checked{% endif %}>
        <label class="form-check-label" for="{{ id }}">{{ label }}</label>
    </div>
{% endmacro %}