    <div class="card shadow my-3 bg-pastelBlue rounded-4">
        <div class="card-body">
            <div class="row align-items-center ">
                <div class="col-6 text-center border-end border-heavyBlack">
                    <div class="">Salaire mensuel</div>
                    <div>{{ lowSalary }}$ - {{ highSalary }}$</div>
                </div>
                <div class="col-6 text-center">
                    <img src="/assets/svg/internships/folded_map.svg" alt="map">
                    <div>{{ location }}</div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow my-3 pt-3 bg-pastelBlue rounded-4">
        <div class="card-body">
            <div class="pb-2"><h4>Informations</h4></div>
            <div class="row row-cols-2">
                <div class="col-4">
                    <img src="/assets/svg/internships/calendar.svg" alt="calendar">
                    <div class="text-darkGrey">OFFRE DISPONIBLE</div>
                    <div class="mb-2">Du {{ startDate }} au {{ endDate }}</div>

                    <img src="/assets/svg/internships/timer.svg" alt="timer">
                    <div class="text-darkGrey">NOMBRE DE PLACES</div>
                    <div class="mb-2">{{ placesCount }} stagiaires recherch√©s</div>
                </div>

                <div class="col-4">
                    <img src="/assets/svg/internships/stack.svg" alt="stack">
                    <div class="text-darkGrey">DUREE DU STAGE</div>
                    <div class="mb-2">{{ duration }}</div>
                </div>

                <div class="col-4">
                    <img src="/assets/svg/internships/brief_case.svg" alt="briefcase">
                    <div class="text-darkGrey">NIVEAU REQUIS</div>
                    <div class="mb-2">{{ promos }}</div>
                </div>
            </div>
        </div>
    </div>
{% endmacro %}