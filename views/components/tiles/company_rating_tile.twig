{% macro content(companyName, ratingNumber, averageRating) %}
    {% import "components/forms/rating_field.twig" as rating_field %}

    <div class="card shadow my-3 bg-gradient-card">
        <div class="card-body">
            <div class="row mb-3">
                {{ rating_field.content("average_rate", averageRating) }}
            </div>
            <h2>Avis de {{ companyName }}</h2>
            <h6>{{ ratingNumber }} avis</h6>
        </div>
    </div>
{% endmacro %}