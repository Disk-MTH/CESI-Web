{% macro content(rate, internship) %}
    {% import "components/forms/rating_field.twig" as rating_field %}

    <div class="card shadow mb-3 bg-gradient-card">
        <div class="card-body">
            <div class="row align-items-center text-nowrap">
                <div class="col-xl-3 col-4">
                    <div class="row">
                        <div class="col">
                            {{ rate["users"].getFirstName() }} {{ rate["users"].getLastName() }}
                        </div>
                        <div class="col">
                            Etudiant Ã  {{ rate["users"].getPromos()[0].getSchool() }}
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-3 d-none d-sm-block">
                    <img class="img-fluid" src="/files/users/{{ rate["users"].getProfilePicture() }}" alt="pfp"
                         style="width: 7vh; height: 7vh;">
                </div>
                <div class="col-1 d-md-none"></div>
                <div class="col-xl-6 col-5">
                    {{ rating_field.content("ratings", rate["rate"].getGrade()) }}
                </div>
            </div>
            <hr>
            <div class=row">
                {{ rate["rate"].getDescription() }}
            </div>
        </div>
    </div>
{% endmacro %}