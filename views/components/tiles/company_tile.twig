<template id="company_tile">
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card shadow bg-gradient-card user-select-none">
            <div class="card-body">
                <div class="row row-cols-2">
                    <div class="col-3 col-lg-4 col-xl-2 w-auto">
                        <img class="img-fluid bg-deepSeaBlue bg-opacity-25 py-3 px-3 rounded-3" src="{icon}"
                             alt="company_logo">
                    </div>
                    <div class="col">
                        <h6 class="card-title text-heavyBlack">{company}</h6>
                        <p class="text-lightGrey"><img class="img-fluid" src="/assets/svg/tile/map_pin.svg"
                                                       alt="mapPin"> {location}</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                        <button class="btn w-100 btn-deepSeaBlue shadow rounded-2"
                                onclick="navigateTo(event, '{url}')">
                            Entreprise
                        </button>
                    </div>

                    <div class="col-8">
                        <button class="btn w-100 btn-pastelBlue shadow rounded-2 text-heavyBlack"
                                onclick="navigateTo(event, '{rating_url}')">
                            Voir les {rating_count} avis
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</template>


